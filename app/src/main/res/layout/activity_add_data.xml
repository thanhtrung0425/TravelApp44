<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33CCFF"
    android:id="@+id/addDataActivity"
    tools:context=".Views.AddDataActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Add data to database"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvID"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/txt1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:gravity="start"
        android:paddingStart="5dp"
        android:text="ID ITEM"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtInsertId"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/txt1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tvID"
        android:background="@drawable/roundededt"
        android:inputType="textLongMessage|number"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tvID"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:gravity="start"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:text="NAME ITEM"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtInsertname"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtInsertId"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvName"
        android:background="@drawable/roundededt"
        android:inputType="textLongMessage"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvAddresss"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tvName"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:gravity="start"
        android:paddingStart="5dp"
        android:text="ADDRESS"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtInsertAddress"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtInsertname"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvName"
        android:background="@drawable/roundededt"
        android:inputType="textLongMessage"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvInsertImage"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tvAddresss"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:gravity="start"
        android:paddingStart="5dp"
        android:text="IMAGE"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtInsertImage1"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtInsertAddress"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvName"
        android:background="@drawable/roundededt"
        android:hint="link URL here"
        android:inputType="textLongMessage"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtInsertImage2"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtInsertImage1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvName"
        android:background="@drawable/roundededt"
        android:hint="link URL here"
        android:inputType="textLongMessage"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtInsertImage3"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtInsertImage2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvName"
        android:background="@drawable/roundededt"
        android:hint="link URL here"
        android:inputType="textLongMessage"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvDecription"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tvInsertImage"
        android:layout_marginStart="15dp"
        android:layout_marginTop="130dp"
        android:gravity="start"
        android:paddingStart="5dp"
        android:text="ABOUT"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtInsertDecription"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtInsertImage3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvName"
        android:background="@drawable/roundededt"
        android:inputType="textLongMessage"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tvDecription"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:gravity="start"
        android:paddingStart="0dp"
        android:text="LOCATION"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtInsertLatitude"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtInsertDecription"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvName"
        android:background="@drawable/roundededt"
        android:hint="Latitude"
        android:inputType="textLongMessage|numberDecimal"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtInsertLongtitude"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtInsertLatitude"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvName"
        android:background="@drawable/roundededt"
        android:hint="Longitude"
        android:inputType="textLongMessage|numberDecimal"
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tvLocation"
        android:layout_marginStart="15dp"
        android:layout_marginTop="75dp"
        android:gravity="start"
        android:paddingStart="5dp"
        android:text="PRICE"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edtInsertPrice"
        android:layout_width="244dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtInsertLongtitude"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvName"
        android:background="@drawable/roundededt"
        android:inputType="textLongMessage|number"
        android:paddingStart="5dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="15sp"
        android:visibility="invisible" />


    <Button
        android:id="@+id/btnInsertData"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundedbutton"
        android:text="Insert" />

    <Button
        android:id="@+id/btnShowData"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="95dp"
        android:visibility="invisible"
        android:background="@drawable/roundedbutton"
        android:text="Show" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundedbutton"
        android:text="Update"
        android:visibility="invisible" />

</RelativeLayout>