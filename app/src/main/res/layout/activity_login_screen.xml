<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/home_bg">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo_firebase"></ImageView>


    <EditText
        android:id="@+id/edtAccount"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:hint="Phone number or email"
        android:inputType="textLongMessage"
        android:textColor="#000000"></EditText>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edtAccount"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000000"></EditText>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedbutton"
        android:elevation="10dp"
        android:text="Login"
        android:textSize="15sp"></Button>

    <TextView
        android:id="@+id/txthoac"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="HOáº¶C"
        android:textColor="#0B0B0B"></TextView>

    <View
        android:layout_width="110dp"
        android:layout_height="1dp"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:layout_toLeftOf="@id/txthoac"
        android:background="#0B0B0B"></View>
    <View
        android:layout_width="110dp"
        android:layout_height="1dp"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@id/txthoac"
        android:background="#0B0B0B"></View>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txthoac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedbutton"
        android:elevation="10dp"
        android:text="Register"
        android:textSize="15sp"></Button>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/maintext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:text="from"
        android:textColor="#1E1D1D"></TextView>

    <TextView
        android:id="@+id/maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="THKPQ ENTERTAINMENT"
        android:textColor="#F4A460"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>


</RelativeLayout>